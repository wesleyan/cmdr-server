<%= form_for(@room) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :hostname %>
  <%= f.text_field :hostname %>

  <%= f.label :belongs_to %>
  <%= f.text_field :belongs_to %>

  <%= f.label :mac %>
  <%= f.text_field :mac %>

  <%= f.fields_for :devices do |device| %>
    Projector: <%= device.text_field :projector %>

    Volume: <%= device.text_field :volume %>

    Switcher: <%= device.text_field :switcher %>

    IR Switcher: <%= device.text_field :ir_switcher %>

    BlurayPlayer: <%= device.text_field :blurayplayer %>
    
    Computer: <%= device.text_field :computer %>

    Ports: <%#= device.text_field :ports %>
  <% end %>

  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
